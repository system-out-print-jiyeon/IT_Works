		from employee
		where mem_status = 'Y'
		and dept_code = 'D4'
	</select>
	
	
	<!-- 부서별 사원 조회 -->
	<select id="businessList" resultMap="memberResultSet">
		
		select
			 
			    mem_name
              , dept_name
              , job_name
		  from employee
          join department using(dept_code)
          join jobgrade using(job_code)
         where dept_code = 'D3'
         order 
            by job_code desc
		
	</select>
	
	<select id="personnelList" resultMap="memberResultSet">
		
		select
			 
			    mem_name
              , dept_name
